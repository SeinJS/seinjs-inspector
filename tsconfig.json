{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "sourceMap": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "outFile": "./lib/index.d.ts",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.scss"
  ]
}
